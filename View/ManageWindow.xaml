<Window x:Class="LabelAnnotator.ManageWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:local="clr-namespace:LabelAnnotator" mc:Ignorable="d" Title="레이블 관리"
        Height="400" Width="550" MinHeight="300" MinWidth="450">
    <Window.Resources>
        <local:TacticConverter x:Key="TacticConverter" />
    </Window.Resources>
    <Grid>
        <DockPanel>
            <StackPanel HorizontalAlignment="Right" DockPanel.Dock="Bottom">
                <Button Content="닫기" TabIndex="14" Margin="2" Padding="5" Command="{Binding CmdClose}" Height="28" />
            </StackPanel>
            <TabControl TabIndex="0">
                <TabItem Header="레이블 분석">
                    <DockPanel>
                        <DockPanel DockPanel.Dock="Bottom">
                            <Button DockPanel.Dock="Right" TabIndex="2" Content="분석할 레이블 선택" Margin="2" Padding="5" Height="28" VerticalAlignment="Center"
                                    Command="{Binding CmdVerifyLabel}" />
                            <Button DockPanel.Dock="Right" TabIndex="1" Content="유효한 레이블만 내보내기" Margin="2" Padding="5" Height="28" VerticalAlignment="Center"
                                    Command="{Binding CmdExportValidLabel}" />
                            <ProgressBar Maximum="100" Minimum="0" Value="{Binding ProgressVerifyLabelValue}" Margin="5" Height="20" />
                        </DockPanel>
                        <TextBox TextWrapping="Wrap" AcceptsReturn="True" DockPanel.Dock="Bottom" VerticalScrollBarVisibility="Auto" x:Name="TxtLogVerifyLabel"
                                 Text="{Binding LogVerifyLabel}" IsReadOnly="True" IsTabStop="False" />
                    </DockPanel>
                </TabItem>
                <TabItem Header="레이블 병합">
                    <DockPanel>
                        <DockPanel DockPanel.Dock="Bottom">
                            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button Content="파일 추가" TabIndex="4" Margin="2" Padding="5" Height="28" VerticalAlignment="Center" HorizontalAlignment="Right"
                                        Command="{Binding CmdAddFileForUnionLabel}" />
                                <Button Content="폴더 추가" TabIndex="5" Margin="2" Padding="5" Height="28" VerticalAlignment="Center" HorizontalAlignment="Right"
                                        Command="{Binding CmdAddFolderForUnionLabel}" />
                                <Button Content="선택 파일 삭제" TabIndex="6" Margin="2" Padding="5" Height="28" VerticalAlignment="Center"
                                        HorizontalAlignment="Right" Command="{Binding CmdRemoveFileForUnionLabel}"
                                        CommandParameter="{Binding ElementName=ListViewFilesForUnionLabel, Path=SelectedItems}" />
                                <Button Content="초기화" TabIndex="7" Margin="2" Padding="5" Height="28" VerticalAlignment="Center" HorizontalAlignment="Right"
                                        Command="{Binding CmdResetFileForUnionLabel}" />
                                <Button Content="내보내기" TabIndex="8" Margin="2" Padding="5" Height="28" VerticalAlignment="Center" HorizontalAlignment="Right"
                                        Command="{Binding CmdExportUnionLabel}" />
                            </StackPanel>
                        </DockPanel>
                        <ListView x:Name="ListViewFilesForUnionLabel" ItemsSource="{Binding FilesForUnionLabel}" TabIndex="3" />
                    </DockPanel>
                </TabItem>
                <TabItem Header="레이블 분리">
                    <DockPanel LastChildFill="False">
                        <Label DockPanel.Dock="Top" Content="분할 방법 선택:" />
                        <StackPanel DockPanel.Dock="Top">
                            <RadioButton TabIndex="9" GroupName="TacticsForSplitLabel" Content="각 파일에 균등한 갯수의 이미지가 포함되도록 n개의 레이블 파일로 분할"
                                    IsChecked="{Binding TacticForSplitLabel, Converter={StaticResource TacticConverter}, ConverterParameter=DevideToNLabels}"
                                    Margin="1" />
                            <RadioButton TabIndex="10" GroupName="TacticsForSplitLabel" Content="레이블 파일에 포함된 이미지중 n개를 다른 파일로 분리"
                                    IsChecked="{Binding TacticForSplitLabel, Converter={StaticResource TacticConverter}, ConverterParameter=TakeNSamples}"
                                    Margin="1" />
                            <RadioButton TabIndex="11" GroupName="TacticsForSplitLabel" Content="각 하위 폴더에 폴더 안의 이미지만을 포함하는 레이블 파일 생성"
                                    IsChecked="{Binding TacticForSplitLabel, Converter={StaticResource TacticConverter}, ConverterParameter=SplitToSubFolders}"
                                    Margin="1" />
                        </StackPanel>
                        <Label DockPanel.Dock="Top" Content="n의 값 입력:" />
                        <TextBox x:Name="TxtNValueForSplitLabel" TabIndex="12" DockPanel.Dock="Top" Text="{Binding NValueForSplitLabel}" Width="200"
                                HorizontalAlignment="Left" Margin="2" />
                        <Button DockPanel.Dock="Bottom" TabIndex="13" Content="분할할 레이블 파일 선택" Margin="2" Padding="5" Height="28" VerticalAlignment="Center"
                                HorizontalAlignment="Right" Command="{Binding CmdSplitLabel}" />
                    </DockPanel>
                </TabItem>
            </TabControl>
        </DockPanel>
    </Grid>
</Window>
