<UserControl x:Class="LabelAnnotator.Views.ManageDialog" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:cvt="clr-namespace:LabelAnnotator.UserControls.Converters"
        mc:Ignorable="d" xmlns:prism="http://prismlibrary.com/" xmlns:vm="clr-namespace:LabelAnnotator.ViewModels" d:DataContext="{d:DesignInstance Type=vm:ManageDialogViewModel}">
    <prism:Dialog.WindowStyle>
        <Style TargetType="Window">
            <Setter Property="prism:Dialog.WindowStartupLocation" Value="CenterOwner" />
            <Setter Property="ShowInTaskbar" Value="False" />
            <Setter Property="Width" Value="550" />
            <Setter Property="Height" Value="400" />
            <Setter Property="MinWidth" Value="450" />
            <Setter Property="MinHeight" Value="300" />
        </Style>
    </prism:Dialog.WindowStyle>
    <UserControl.Resources>
        <cvt:TacticForSplitLabelConverter x:Key="TacticForSplitLabelConverter" />
        <cvt:TacticForConvertLabelConverter x:Key="TacticForConvertLabelConverter" />
    </UserControl.Resources>
    <Grid>
        <DockPanel>
            <StackPanel HorizontalAlignment="Right" DockPanel.Dock="Bottom">
                <Button Content="닫기" TabIndex="22" Margin="2" Padding="5" Command="{Binding CmdClose}" Height="28" />
            </StackPanel>
            <TabControl TabIndex="0">
                <TabItem Header="데이터셋 분석">
                    <DockPanel>
                        <DockPanel DockPanel.Dock="Bottom">
                            <Button DockPanel.Dock="Right" TabIndex="3" Content="내보내기" Margin="2" Padding="5" Height="28" VerticalAlignment="Center" Command="{Binding CmdExportVerifiedLabel}" />
                            <Button DockPanel.Dock="Right" TabIndex="2" Content="이미지 삭제" Margin="2" Padding="5" Height="28" VerticalAlignment="Center" Command="{Binding CmdDeleteUnusedImages}" />
                            <Button DockPanel.Dock="Right" TabIndex="1" Content="데이터셋 선택" Margin="2" Padding="5" Height="28" VerticalAlignment="Center" Command="{Binding CmdVerifyLabel}" />
                            <ProgressBar Maximum="100" Minimum="0" Value="{Binding ProgressVerifyDataset}" Margin="5" Height="20" />
                        </DockPanel>
                        <TextBox TextWrapping="Wrap" AcceptsReturn="True" DockPanel.Dock="Bottom" VerticalScrollBarVisibility="Auto" x:Name="TxtLogVerifyDataset" Text="{Binding LogVerifyDataset}"
                                IsReadOnly="True" IsTabStop="False" />
                    </DockPanel>
                </TabItem>
                <TabItem Header="데이터셋 병합">
                    <DockPanel>
                        <DockPanel DockPanel.Dock="Bottom">
                            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button Content="파일 추가" TabIndex="5" Margin="2" Padding="5" Height="28" VerticalAlignment="Center" HorizontalAlignment="Right"
                                        Command="{Binding CmdAddFileForUnionDataset}" />
                                <Button Content="폴더 추가" TabIndex="6" Margin="2" Padding="5" Height="28" VerticalAlignment="Center" HorizontalAlignment="Right"
                                        Command="{Binding CmdAddFolderForUnionDataset}" />
                                <Button Content="선택 파일 삭제" TabIndex="7" Margin="2" Padding="5" Height="28" VerticalAlignment="Center" HorizontalAlignment="Right"
                                        Command="{Binding CmdRemoveFileForUnionDataset}" CommandParameter="{Binding ElementName=ListViewFilesForUnionDataset, Path=SelectedItems}" />
                                <Button Content="초기화" TabIndex="8" Margin="2" Padding="5" Height="28" VerticalAlignment="Center" HorizontalAlignment="Right"
                                        Command="{Binding CmdResetFileForUnionDataset}" />
                                <Button Content="내보내기" TabIndex="9" Margin="2" Padding="5" Height="28" VerticalAlignment="Center" HorizontalAlignment="Right" Command="{Binding CmdExportUnionDataset}" />
                            </StackPanel>
                        </DockPanel>
                        <ListView x:Name="ListViewFilesForUnionDataset" ItemsSource="{Binding FilesForUnionDataset}" TabIndex="4" />
                    </DockPanel>
                </TabItem>
                <TabItem Header="데이터셋 분할">
                    <DockPanel LastChildFill="False">
                        <Label DockPanel.Dock="Top" Content="분할 방법 선택:" />
                        <StackPanel DockPanel.Dock="Top">
                            <RadioButton TabIndex="10" GroupName="TacticsForSplitLabel" Content="균등한 갯수의 이미지가 포함되도록 n개의 데이터셋으로 분할"
                                    IsChecked="{Binding TacticForSplitLabel, Converter={StaticResource TacticForSplitLabelConverter}, ConverterParameter=DevideToNLabels}" Margin="1" />
                            <RadioButton TabIndex="11" GroupName="TacticsForSplitLabel" Content="데이터셋에 포함된 이미지중 n개를 다른 파일로 분리"
                                    IsChecked="{Binding TacticForSplitLabel, Converter={StaticResource TacticForSplitLabelConverter}, ConverterParameter=TakeNSamples}" Margin="1" />
                            <RadioButton TabIndex="12" GroupName="TacticsForSplitLabel" Content="하위 폴더에 각 폴더 안의 이미지만을 포함하는 데이터셋 생성"
                                    IsChecked="{Binding TacticForSplitLabel, Converter={StaticResource TacticForSplitLabelConverter}, ConverterParameter=SplitToSubFolders}" Margin="1" />
                        </StackPanel>
                        <Label DockPanel.Dock="Top" Content="n의 값 입력:" />
                        <TextBox x:Name="TxtNValueForSplitLabel" TabIndex="13" DockPanel.Dock="Top" Text="{Binding NValueForSplitLabel}"
                                IsEnabled="{Binding TacticForSplitLabel, Converter={StaticResource TacticForSplitLabelConverter}, ConverterParameter=TxtNValueForSplitLabel}" Width="150"
                                HorizontalAlignment="Left" Margin="2" />
                        <Button DockPanel.Dock="Bottom" TabIndex="14" Content="데이터셋 선택" Margin="2" Padding="5" Height="28" VerticalAlignment="Center" HorizontalAlignment="Right"
                                Command="{Binding CmdSplitLabel}" />
                    </DockPanel>
                </TabItem>
                <TabItem Header="데이터셋 중복 제거">
                    <DockPanel>
                        <DockPanel DockPanel.Dock="Bottom">
                            <Button DockPanel.Dock="Right" TabIndex="18" Content="내보내기" Margin="2" Padding="5" Height="28" VerticalAlignment="Center" Command="{Binding CmdExportUndupedLabel}" />
                            <Button DockPanel.Dock="Right" TabIndex="17" Content="데이터셋 선택" Margin="2" Padding="5" Height="28" VerticalAlignment="Center" Command="{Binding CmdUndupeLabel}" />
                            <ProgressBar Maximum="100" Minimum="0" Value="{Binding ProgressUndupeLabelValue}" Margin="5" Height="20" />
                        </DockPanel>
                        <Label DockPanel.Dock="Top" Content="IoU 임계값 설정:" />
                        <TextBox DockPanel.Dock="Top" TabIndex="15" Text="{Binding IoUThreshold}" Width="150" HorizontalAlignment="Left" Margin="2" />
                        <CheckBox DockPanel.Dock="Top" TabIndex="16" IsChecked="{Binding UndupeWithoutClass}" Content="서로 분류가 다른 경계 상자도 중복으로 판단" Margin="2" />
                        <TextBox TextWrapping="Wrap" AcceptsReturn="True" DockPanel.Dock="Bottom" VerticalScrollBarVisibility="Auto" x:Name="TxtLogUndupeLabel" Text="{Binding LogUndupeLabel}"
                                IsReadOnly="True" IsTabStop="False" />
                    </DockPanel>
                </TabItem>
                <TabItem Header="데이터셋 변환">
                    <DockPanel LastChildFill="False">
                        <Label DockPanel.Dock="Top" Content="변환 방법 선택:" />
                        <StackPanel DockPanel.Dock="Top">
                            <RadioButton TabIndex="19" GroupName="TacticsForConvertLabel" Content="COCO에서 CSV로 변환"
                                    IsChecked="{Binding TacticForConvertLabel, Converter={StaticResource TacticForConvertLabelConverter}, ConverterParameter=COCOToCSV}" Margin="1" />
                            <RadioButton TabIndex="20" GroupName="TacticsForConvertLabel" Content="CSV에서 COCO로 변환"
                                    IsChecked="{Binding TacticForConvertLabel, Converter={StaticResource TacticForConvertLabelConverter}, ConverterParameter=CSVToCOCO}" Margin="1" />
                        </StackPanel>
                        <DockPanel DockPanel.Dock="Bottom">
                            <Button DockPanel.Dock="Right" TabIndex="21" Content="데이터셋 선택" Margin="2" Padding="5" Height="28" VerticalAlignment="Center" Command="{Binding CmdConvertLabel}" />
                            <ProgressBar Maximum="100" Minimum="0" Value="{Binding ProgressConvertLabelValue}" Margin="5" Height="20" />
                        </DockPanel>
                    </DockPanel>
                </TabItem>
            </TabControl>
        </DockPanel>
    </Grid>
</UserControl>
