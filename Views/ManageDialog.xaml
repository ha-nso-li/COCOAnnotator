<UserControl x:Class="COCOAnnotator.Views.ManageDialog" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:cvt="clr-namespace:COCOAnnotator.UserControls.Converters"
        mc:Ignorable="d" xmlns:prism="http://prismlibrary.com/" xmlns:vm="clr-namespace:COCOAnnotator.ViewModels" d:DataContext="{d:DesignInstance Type=vm:ManageDialogViewModel}">
    <prism:Dialog.WindowStyle>
        <Style TargetType="Window">
            <Setter Property="prism:Dialog.WindowStartupLocation" Value="CenterOwner" />
            <Setter Property="ShowInTaskbar" Value="False" />
            <Setter Property="Width" Value="550" />
            <Setter Property="Height" Value="400" />
            <Setter Property="MinWidth" Value="450" />
            <Setter Property="MinHeight" Value="320" />
        </Style>
    </prism:Dialog.WindowStyle>
    <UserControl.Resources>
        <cvt:TacticForSplitDatasetConverter x:Key="TacticForSplitDatasetConverter" />
        <cvt:TacticForConvertDatasetConverter x:Key="TacticForConvertDatasetConverter" />
        <cvt:CSVFormatConverter x:Key="CSVFormatConverter" />
    </UserControl.Resources>
    <Grid>
        <DockPanel>
            <StackPanel HorizontalAlignment="Right" DockPanel.Dock="Bottom">
                <Button Content="닫기" TabIndex="22" Margin="2" Padding="5" Command="{Binding CmdClose}" Height="28" />
            </StackPanel>
            <TabControl TabIndex="0">
                <TabItem Header="데이터셋 분석">
                    <DockPanel>
                        <DockPanel DockPanel.Dock="Bottom">
                            <Button DockPanel.Dock="Right" TabIndex="2" Content="유효한 데이터만 저장하기" Margin="2" Padding="5" Height="28" VerticalAlignment="Center"
                                    Command="{Binding CmdExportVerifiedDataset}" />
                            <Button DockPanel.Dock="Right" TabIndex="1" Content="데이터셋 선택" Margin="2" Padding="5" Height="28" VerticalAlignment="Center" Command="{Binding CmdVerifyDataset}" />
                            <ProgressBar Maximum="100" Minimum="0" Value="{Binding ProgressVerifyDataset}" Margin="5" Height="20" />
                        </DockPanel>
                        <TextBox TextWrapping="Wrap" AcceptsReturn="True" DockPanel.Dock="Bottom" VerticalScrollBarVisibility="Auto" x:Name="TxtLogVerifyDataset" Text="{Binding LogVerifyDataset}"
                                IsReadOnly="True" IsTabStop="False" />
                    </DockPanel>
                </TabItem>
                <TabItem Header="데이터셋 병합">
                    <DockPanel>
                        <DockPanel DockPanel.Dock="Bottom">
                            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button Content="파일 추가" TabIndex="4" Margin="2" Padding="5" Height="28" VerticalAlignment="Center" HorizontalAlignment="Right"
                                        Command="{Binding CmdAddFileForUnionDataset}" />
                                <Button Content="폴더 추가" TabIndex="5" Margin="2" Padding="5" Height="28" VerticalAlignment="Center" HorizontalAlignment="Right"
                                        Command="{Binding CmdAddFolderForUnionDataset}" />
                                <Button Content="선택 파일 삭제" TabIndex="6" Margin="2" Padding="5" Height="28" VerticalAlignment="Center" HorizontalAlignment="Right"
                                        Command="{Binding CmdRemoveFileForUnionDataset}" CommandParameter="{Binding ElementName=ListViewFilesForUnionDataset, Path=SelectedItems}" />
                                <Button Content="초기화" TabIndex="7" Margin="2" Padding="5" Height="28" VerticalAlignment="Center" HorizontalAlignment="Right"
                                        Command="{Binding CmdResetFileForUnionDataset}" />
                                <Button Content="내보내기" TabIndex="8" Margin="2" Padding="5" Height="28" VerticalAlignment="Center" HorizontalAlignment="Right" Command="{Binding CmdExportUnionDataset}" />
                            </StackPanel>
                        </DockPanel>
                        <ListView x:Name="ListViewFilesForUnionDataset" ItemsSource="{Binding FilesForUnionDataset}" TabIndex="3" />
                    </DockPanel>
                </TabItem>
                <TabItem Header="데이터셋 분할">
                    <DockPanel LastChildFill="False">
                        <Label DockPanel.Dock="Top" Content="분할 방법 선택:" />
                        <StackPanel DockPanel.Dock="Top">
                            <RadioButton TabIndex="9" GroupName="TacticsForSplitDataset" Content="균등한 갯수의 이미지가 포함되도록 n개의 데이터셋으로 분할"
                                    IsChecked="{Binding TacticForSplitDataset, Converter={StaticResource TacticForSplitDatasetConverter}, ConverterParameter=DevideToN}" Margin="1" />
                            <RadioButton TabIndex="10" GroupName="TacticsForSplitDataset" Content="데이터셋에 포함된 이미지중 n개를 다른 파일로 분리"
                                    IsChecked="{Binding TacticForSplitDataset, Converter={StaticResource TacticForSplitDatasetConverter}, ConverterParameter=TakeNSamples}" Margin="1" />
                        </StackPanel>
                        <Label DockPanel.Dock="Top" Content="n의 값 입력:" />
                        <TextBox TabIndex="11" DockPanel.Dock="Top" Text="{Binding NValueForSplitDataset}" Width="150" HorizontalAlignment="Left" Margin="2" />
                        <Button DockPanel.Dock="Bottom" TabIndex="12" Content="데이터셋 선택" Margin="2" Padding="5" Height="28" VerticalAlignment="Center" HorizontalAlignment="Right"
                                Command="{Binding CmdSplitDataset}" />
                    </DockPanel>
                </TabItem>
                <TabItem Header="데이터셋 중복 제거">
                    <DockPanel>
                        <DockPanel DockPanel.Dock="Bottom">
                            <Button DockPanel.Dock="Right" TabIndex="16" Content="내보내기" Margin="2" Padding="5" Height="28" VerticalAlignment="Center" Command="{Binding CmdExportUndupedDataset}" />
                            <Button DockPanel.Dock="Right" TabIndex="15" Content="데이터셋 선택" Margin="2" Padding="5" Height="28" VerticalAlignment="Center" Command="{Binding CmdUndupeDataset}" />
                            <ProgressBar Maximum="100" Minimum="0" Value="{Binding ProgressUndupeDatasetValue}" Margin="5" Height="20" />
                        </DockPanel>
                        <Label DockPanel.Dock="Top" Content="IoU 임계값 설정:" />
                        <TextBox DockPanel.Dock="Top" TabIndex="13" Text="{Binding IoUThreshold}" Width="150" HorizontalAlignment="Left" Margin="2" />
                        <CheckBox DockPanel.Dock="Top" TabIndex="14" IsChecked="{Binding UndupeWithoutCategory}" Content="서로 분류가 다른 경계 상자도 중복으로 판단" Margin="2" />
                        <TextBox TextWrapping="Wrap" AcceptsReturn="True" DockPanel.Dock="Bottom" VerticalScrollBarVisibility="Auto" x:Name="TxtLogUndupeLabel" Text="{Binding LogUndupeDataset}"
                                IsReadOnly="True" IsTabStop="False" />
                    </DockPanel>
                </TabItem>
                <TabItem Header="데이터셋 변환">
                    <DockPanel LastChildFill="False">
                        <GroupBox DockPanel.Dock="Top" Header="데이터셋 변환 방법" Margin="3" Width="200" HorizontalAlignment="Left">
                            <StackPanel Margin="3">
                                <RadioButton TabIndex="17" GroupName="TacticsForConvertDataset" Content="COCO에서 CSV로 변환"
                                        IsChecked="{Binding TacticForConvertDataset, Converter={StaticResource TacticForConvertDatasetConverter}, ConverterParameter=COCOToCSV}" Margin="1" />
                                <RadioButton TabIndex="18" GroupName="TacticsForConvertDataset" Content="CSV에서 COCO로 변환"
                                        IsChecked="{Binding TacticForConvertDataset, Converter={StaticResource TacticForConvertDatasetConverter}, ConverterParameter=CSVToCOCO}" Margin="1" />
                            </StackPanel>
                        </GroupBox>
                        <GroupBox DockPanel.Dock="Top" Header="CSV 파일 형식" Margin="3" Width="250" HorizontalAlignment="Left">
                            <StackPanel Margin="3">
                                <RadioButton GroupName="CSVFormat" TabIndex="19" IsChecked="{Binding CSVFormat, Converter={StaticResource CSVFormatConverter}, ConverterParameter=LTRB}">좌-상-우-하 (LTRB)</RadioButton>
                                <RadioButton GroupName="CSVFormat" TabIndex="20" IsChecked="{Binding CSVFormat, Converter={StaticResource CSVFormatConverter}, ConverterParameter=LTWH}">좌-상-가로-세로 (LTWH)</RadioButton>
                                <RadioButton GroupName="CSVFormat" TabIndex="21" IsChecked="{Binding CSVFormat, Converter={StaticResource CSVFormatConverter}, ConverterParameter=CXCYWH}">중앙X-중앙Y-가로-세로 (CXCYWH)</RadioButton>
                            </StackPanel>
                        </GroupBox>
                        <DockPanel DockPanel.Dock="Bottom">
                            <Button DockPanel.Dock="Right" TabIndex="22" Content="데이터셋 선택" Margin="2" Padding="5" Height="28" VerticalAlignment="Center" Command="{Binding CmdConvertDataset}" />
                            <ProgressBar Maximum="100" Minimum="0" Value="{Binding ProgressConvertDatasetValue}" Margin="5" Height="20" />
                        </DockPanel>
                    </DockPanel>
                </TabItem>
            </TabControl>
        </DockPanel>
    </Grid>
</UserControl>
